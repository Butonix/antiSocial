.comments-label
	strong
		= 'Comments '
		i.glyphicon.glyphicon-comment
.comments-list
	if comments
		for comment in comments
			.comment
				- var thumb = comment.resolvedProfiles[comment.source].profile.photo.url
				- var name = comment.resolvedProfiles[comment.source].profile.name
				a(href= "/profile?endpoint=" + encodeURIComponent(comment.source))
					img.profile-thumb(src= thumb)
					span.profile-link
						= name
				!= marked(comment.body)
			.clearfix
